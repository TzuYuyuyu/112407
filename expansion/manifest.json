{
    "manifest_version": 3,
    "name": "我的店家搜索擴充",
    "version": "1.0",
    "description": "一個簡單的店家搜索擴充程式",
    "permissions": ["storage", "activeTab", "https://maps.googleapis.com/"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon_16.jpg",
        "48": "images/icon_48.jpg",
        "128": "images/icon_128.jpg"
      }
    },
    "icons": {
      "16": "images/icon_16.jpg",
      "48": "images/icon_48.jpg",
      "128": "images/icon_128.jpg"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon_16.jpg",
        "48": "images/icon_48.jpg",
        "128": "images/icon_128.jpg"
      }
    }
  }
  
  